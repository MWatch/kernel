    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "gdb",
            "request": "attach",
            "name": "Debug",
            // "gdbpath" : "/home/mabez/programs/gcc-arm-none-eabi-5_4-2016q3/bin/arm-none-eabi-gdb",
            "gdbpath": "/home/mabez/programs/gcc-arm-none-eabi-7-2017-q4-major/bin/arm-none-eabi-gdb",
            "debugger_args": [
                "-nx" // dont use the .gdbinit file
            ],
            "executable": "./target/thumbv7em-none-eabi/debug/mabez_watch",
            "remote": true,
            "target": ":3333",
            "cwd": "${workspaceRoot}",
            "autorun": [
                "set print asm-demangle on",
                "monitor arm semihosting enable",
                "load",
                "break main",
                "step"
            ]
        },
        {
            "type": "gdb",
            "request": "attach",
            "name": "Release",
            // "gdbpath" : "/home/mabez/programs/gcc-arm-none-eabi-5_4-2016q3/bin/arm-none-eabi-gdb",
            "gdbpath": "/home/mabez/programs/gcc-arm-none-eabi-7-2017-q4-major/bin/arm-none-eabi-gdb",
            // "gdbpath": "/usr/bin/arm-none-eabi-gdb",
            "debugger_args": [
                "-nx" // dont use the .gdbinit file
            ],
            "executable": "./target/thumbv7em-none-eabi/release/mabez_watch",
            "remote": true,
            "target": ":3333",
            "cwd": "${workspaceRoot}",
            "autorun": [
                "set print asm-demangle on",
                "monitor arm semihosting enable",
                "load",
                "break main",
                "step"
            ]
        },
    ]
}